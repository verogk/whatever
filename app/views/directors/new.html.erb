<!-- Validation failure messages -->
<% if @director.errors.any? %>
  <% @director.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Director</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_director" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @director.name %>">
      </div>

      <!-- Label and input for date_of_birth -->
      <div class="form-group">
        <label for="date_of_birth" class="control-label">
          Date of birth
        </label>

        <input type="text" id="date_of_birth" name="date_of_birth" placeholder="Date of birth" class="form-control" value="<%= @director.date_of_birth %>">
      </div>

      <!-- Label and input for director_id -->
      <div class="form-group">
        <label for="director_id" class="control-label">
          Director
        </label>

        <%= select_tag(:director_id, options_from_collection_for_select(Movie.all, :id, :title, @director.director_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Director
      </button>
      or
      <a href="/directors">Cancel</a>
    </form>
  </div>
</div>
